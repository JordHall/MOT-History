@page
@model IndexModel
@{
    ViewData["Title"] = "MOT History";
}

<div class="text-center p-3">
    <h1 class="display-4">MOT History Checker</h1>
    <form method="post" class="mx-auto w-50 pt-4 pb-4">
        <div class="form-row">
            <div class="col">
                <label for="reg">Registration Number Plate</label>
                <input type="text" class="form-control" id="reg" name="reg" placeholder="XX10ABC">
            </div>
            <div class="col-2">
                <button type="submit" class="btn btn-block btn-primary w-100" style="position: absolute; bottom: 0px;">Check</button>
            </div>
        </div>
    </form>
</div>

@if (Model.Error != null)
{
    <div class="alert alert-danger mx-auto w-50">
        @Model.Error
    </div>
}

@if (Model.Car != null)
{
    @if (!String.IsNullOrWhiteSpace(Model.DaysRemaining))
    {
        <div class="alert alert-info mx-auto w-50 pb-2">@Model.DaysRemaining</div>
    }
    <table class="table table-striped table-dark mx-auto w-50">
        <tbody>
            <tr>
                <th>Model</th>
                <td>@Model.Car.model</td>
            </tr>
            <tr>
                <th>Make</th>
                <td>@Model.Car.make</td>
            </tr>
            <tr>
                <th>Colour</th>
                <td>@Model.Car.primaryColour</td>
            </tr>
            @if (Model.Car.motTests.Count != 0)
            {
                <tr>
                    <th>MOT Expiry Date</th>
                    <td>@Model.MOTExpiry</td>
                </tr>
                <tr>
                    <th>Mileage at last MOT</th>
                    <td>@Model.Mileage</td>
                </tr>
            }
        </tbody>
    </table>
}
